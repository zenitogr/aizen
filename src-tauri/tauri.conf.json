{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aizen",
  "version": "0.1.0",
  "identifier": "com.aizen.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "aizen",
        "label": "main",
        "width": 1280,
        "height": 1024,
        "visible": false,
        "center": true
      },
      {
        "label": "splashscreen",
        "url": "splashscreen/splashscreen.html",
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "title": "aizen",
        "visible": true,
        "height": 600,
        "width": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": []
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/AiZEN-multi-size-icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "process": {
      "relaunch": true
    }
  }
}
