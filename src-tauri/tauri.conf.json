{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aizen",
  "version": "0.1.0",
  "identifier": "com.aizen.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "aizen",
        "label": "main",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen/splashscreen.html",
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "title": "aizen",
        "visible": true,
        "height": 600,
        "width": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "fs-access",
          "description": "Filesystem access for storing and reading application data",
          "windows": ["main", "splashscreen"],
          "permissions": [
            "path:default",
            "path:allow-app-data",
            "path:allow-app-cache",
            "path:allow-app-config",
            "path:allow-app-local-data",
            "path:allow-home",
            "fs:scope",
            "fs:allow-app-data",
            "fs:allow-app-cache",
            "fs:allow-app-config",
            "fs:allow-app-local-data",
            "fs:allow-home",
            "fs:read-file",
            "fs:read-dir",
            "fs:write-file",
            "fs:create-dir",
            "fs:remove-file",
            "fs:remove-dir",
            "fs:copy-file"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/AiZEN-multi-size-icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "$APP/*",
          "$APP_DATA/*",
          "$APP_CACHE/*",
          "$APP_CONFIG/*",
          "$APP_LOCAL_DATA/*",
          "$HOME/AiZEN/*"
        ],
        "deny": []
      }
    }
  }
}
